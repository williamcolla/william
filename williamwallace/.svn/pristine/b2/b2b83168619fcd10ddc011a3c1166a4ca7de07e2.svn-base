
<!DOCTYPE html>
<html>
    <head>
        <%@include file="estrutura/importBot.jsp"%>
        <link href="<%=request.getContextPath()%>/resources/css/login.css" rel="stylesheet">
        <title>Login</title>
    </head>
    <body>
        <%@include file="estrutura/cabecalho.jsp"%>
        <form:form id="" action="efetuaLogin" commandName="TbCliente" method="POST">
            <!--Erro no login-->
            <c:if test="${LoginErro.isMensagem()}">
                <div class="alert alert-danger">
                    <h4>${LoginErro.getTituloMensagem()}</h4>
                    ${LoginErro.getTextMensagem()}
                </div>
            </c:if>
            <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <form:label path="emailcli" for="email">E-mail</form:label>
                                <form:input path="emailcli" type="email" class="form-control" id="email" name="email" placeholder="E-mail" value="${EmailTentativa}" required="required" data-tootle="tooltip"></form:input>
                            </div>
                            <div class="form-group">
                                <form:label path="senhacli" for="senha">Senha</form:label>
                                <form:input id="senha" path="senhacli" type="password" class="form-control" name="senha" placeholder="Senha" required="required" data-tootle="tooltip"></form:input>
                            </div>
                            
                            <div id="register-link" class="text-right">
                                <input value="Entrar" type="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </form:form>
        <%@include file="estrutura/rodape.jsp"%>
    </body>
</html>


