<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <%@include file="estrutura/importBot.jsp"%>
        
        <script type="text/javascript" src="<%=request.getContextPath()%>/resources/js/jquery.mask.min.js"></script>
        
        <script type="text/javascript">
            $(document).ready(function(){
                $("#preco").mask("#.##0,00", {reverse: true});
            });
        </script>
        
        <title>Cadastrar Produto</title>
        
    </head>
    <body>
        <%@include file="estrutura/cabecalho.jsp"%>
        <%@include file="estrutura/rodape.jsp"%> 
        
        <form:form action="salvarProduto" id="formCadastroProduto" commandName="TbProduto" method="POST">
            <div id="wrapper">
                <div class="container body-content">
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <div class="form-group">
                                <form:label path="tbCategoria" for="categoria">${formCategoria}</form:label>
                                <form:input id="categoria" type="text" path="tbCategoria" cssClass="form-control" placeholder="Categoria" required="required" data-tootle="tooltip"></form:input>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">        
                        <div class="col-6">
                            <div class="form-group">
                            <form:label path="nomepro" for="nome">${formNome}</form:label>
                            <form:input id="nome" type="text" path="nomepro" cssClass="form-control" placeholder="Nome Produto" required="required" data-tootle="tooltip"></form:input>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                            <form:label path="precopro" for="preco">${formPreco}</form:label>
                            <form:input id="preco" type="text" path="precopro" cssClass="form-control" placeholder="Preço" required="required" data-tootle="tooltip"></form:input>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                            <form:label path="qtdpro" for="quantidade">${formQuantidade}</form:label>
                            <form:input id="qtd" type="text" path="qtdpro" cssClass="form-control" placeholder="Quantidade" required="required" data-tootle="tooltip"></form:input>
                            </div>
                        </div>
                    </div> 
                            
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <div class="form-group">
                                <form:label path="descrpro" for="descricao">${formDescricao}</form:label>
                                <form:input height="50px" id="descricao" type="text" path="descrpro" cssClass="form-control" placeholder="Descrição" required="required" data-tootle="tooltip"></form:input>                    
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>                
        </form:form>            
       
    </body>
</html>
